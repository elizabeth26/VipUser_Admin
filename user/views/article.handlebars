<div class="d-flex flex-row justify-content-around ">
    <div class="article_contenu border p-20">
        <h6>Article</h6>
         <p id="titre_choisissez">Choisissez un vip pour voir les articles le concernant</p>
            {{#if article}}
            <script>
               var div = document.getElementById("titre_choisissez");
               div.style.display = "none"
            </script>
                 {{#each article}}
                   <strong>{{this.ARTICLE_TITRE}}</strong>
                   <div class="text-justify">{{this.ARTICLE_RESUME}}</div>
                    {{/each}}
            {{/if}}
     
    </div>
    <div class="article_vips text-center border p-20">
        <h4>VIPs</h4>
        {{#each vip}}
        <a href="/articles/{{this.VIP_NUMERO}}">{{this.VIP_PRENOM}} {{this.VIP_NOM}}</a><br>
        {{/each}}
    </div>
</div>